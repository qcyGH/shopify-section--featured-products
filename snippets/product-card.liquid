<div class="product-card">
  <a class="product-card__image" href="{{ product.url }}" target="_blank" rel="noopener noreferrer">
    {%  comment  %}
      This is card image
    {% endcomment %}
    <img src="{{ product.featured_image | img_url: '443x357' }}">
  </a>
  <div class="product-card__content">
    <div class="content__title">
      <a class="content__title--link" href="{{ product.url }}" target="_blank" rel="noopener noreferrer">
        {%  comment  %}
          This is card title
        {% endcomment %}
        {{ product.title }}
      </a>
    </div>
    <div class="content__buy">

      <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

        {%  comment  %}
          The form required for the add to cart function
        {% endcomment %}
        <product-form class="product-form">
          {%- form form 'product', product, id: product_form_id, class: 'form', novalidate: 'novalidate', data-type: 'add-to-cart-form' -%}
            <input id="current-variant" type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}" disabled>
            <input type="hidden" name="quantity" value="1">

            <button type="submit" name="add" class="btn btn--buy">
              {{ 'products.product.add_to_cart' | t }} - {{ product.price | money_without_trailing_zeros }}
              <div class="loading-overlay__spinner hidden">
                  <svg aria-hidden="true" focusable="false" role="presentation" class="spinner" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
                  <circle class="btn-circle path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                  </svg>
              </div>
            </button>
          {%- endform -%}
        </product-form>
    </div>
  </div>
</div>